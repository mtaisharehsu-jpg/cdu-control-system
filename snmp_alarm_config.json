      "heartbeat_interval": 60.0
    }
  },
  "alarm_categories": {
    "temperature": {
      "name": "溫度警報",
      "color": "#ff9800",
      "icon": "thermostat"
    },
    "pressure": {
      "name": "壓力警報", 
      "color": "#2196f3",
      "icon": "speed"
    },
    "flow": {
      "name": "流量警報",
      "color": "#00bcd4",
      "icon": "water_drop"
    },
    "device": {
      "name": "設備警報",
      "color": "#9c27b0",
      "icon": "settings"
    },
    "power": {
      "name": "電源警報",
      "color": "#f44336",
      "icon": "power"
    },
    "leak": {
      "name": "洩漏警報",
      "color": "#e91e63",
      "icon": "warning"
    },
    "system": {
      "name": "系統警報",
      "color": "#607d8b",
      "icon": "computer"
    },
    "communication": {
      "name": "通訊警報",
      "color": "#795548",
      "icon": "network_check"
    }
  },
  "notification_settings": {
    "email": {
      "enabled": true,
      "smtp_server": "smtp.company.com",
      "smtp_port": 587,
      "username": "cdu_alerts@company.com",
      "password": "encrypted_password",
      "recipients": [
        "maintenance@company.com",
        "operations@company.com"
      ]
    },
    "sms": {
      "enabled": false,
      "provider": "twilio",
      "account_sid": "",
      "auth_token": "",
      "from_number": "",
      "to_numbers": []
    },
    "webhook": {
      "enabled": false,
      "url": "https://hooks.company.com/cdu-alerts",
      "method": "POST",
      "headers": {
        "Authorization": "Bearer token"
      }
    }
  },
  "escalation_rules": {
    "temperature_alert": {
      "initial_notification": 0,
      "escalation_interval": 300,
      "max_escalations": 3,
      "escalation_contacts": [
        "supervisor@company.com",
        "manager@company.com",
        "director@company.com"
      ]
    },
    "leak_alert": {
      "initial_notification": 0,
      "escalation_interval": 60,
      "max_escalations": 5,
      "escalation_contacts": [
        "emergency@company.com",
        "safety@company.com"
      ]
    },
    "system_alert": {
      "initial_notification": 0,
      "escalation_interval": 600,
      "max_escalations": 2,
      "escalation_contacts": [
        "it_support@company.com",
        "it_manager@company.com"
      ]
    }
  },
  "auto_actions": {
    "leak_detection": {
      "action": "emergency_stop",
      "delay": 0,
      "confirmation_required": false
    },
    "temperature_critical": {
      "action": "reduce_load",
      "delay": 30,
      "confirmation_required": true
    },
    "pressure_low": {
      "action": "increase_pump_speed",
      "delay": 10,
      "confirmation_required": false
    },
    "communication_lost": {
      "action": "switch_to_manual",
      "delay": 60,
      "confirmation_required": true
    }
  },
  "maintenance_windows": [
    {
      "name": "每日維護窗口",
      "start_time": "02:00",
      "end_time": "04:00",
      "days": ["monday", "tuesday", "wednesday", "thursday", "friday"],
      "suppress_alarms": ["system", "communication"],
      "reduce_sensitivity": true
    },
    {
      "name": "週末維護窗口", 
      "start_time": "01:00",
      "end_time": "06:00",
      "days": ["saturday", "sunday"],
      "suppress_alarms": ["system"],
      "reduce_sensitivity": false
    }
  ],
  "logging": {
    "enabled": true,
    "level": "INFO",
    "file_path": "logs/snmp_alarms.log",
    "max_file_size": "10MB",
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}